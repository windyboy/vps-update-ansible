---
# Ansible Lint Configuration

# List of rules to skip
skip_list:
  - package-latest  # We intentionally use latest for system updates
  - no-handler  # We use direct tasks for reboot which is acceptable
  - var-naming[no-role-prefix]  # Playbook-level vars and register vars don't need role prefix
  - run-once[play]  # run_once is safe in our linear strategy
  - command-instead-of-module  # Some checks require shell commands

# Exclude paths
exclude_paths:
  - .cache/
  - .molecule/
  - venv/

# Enable progressive mode (warn on new issues)
progressive: false

# Output format
# format: rich

# Warn about command usage
warn_list:
  - deprecated-command-syntax

# Rules to enforce
enable_list:
  - yaml
  - name[template]
  - name[casing]

